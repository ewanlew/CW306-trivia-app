<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="25dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/avi_default" />

        <TextView
            android:id="@+id/tvAvatarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alexandria_bold"
            android:text="@string/avi_default"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alexandria"
            android:text="@string/justPrice"
            android:textAlignment="textEnd"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnBuy"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:backgroundTint="#0D8C0D"
            android:fontFamily="@font/alexandria_bold"
            android:insetLeft="0dp"
            android:text="@string/buy"
            android:textColor="#FFFFFF"
            app:cornerRadius="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>