            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alexandria"
            android:text="Coins: 200ðŸª™"
            android:textAlignment="center"
            android:textSize="16sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
